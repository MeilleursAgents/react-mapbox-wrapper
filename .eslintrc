{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "import/resolver": {
            "webpack": {}
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "Promise": true,
        "expect": true
    },
    "plugins": ["babel", "react"],
    "rules": {
        "react/jsx-props-no-spreading": 0,
        "max-classes-per-file": 0
    }
}
